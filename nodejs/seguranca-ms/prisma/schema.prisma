// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id
  name           String
  email          String    @unique
  login          String    @unique
  publickey      String    @unique
  profile        String
  created        DateTime  @default(now())
  lastUpdate     DateTime?
  active         Boolean

}

model Password {
  id             Int        @default(autoincrement()) @id
  userId         String
  password       String
  expire         DateTime?
  created        DateTime   @default(now())
  active         Boolean

  @@unique(fields: [userId, password], name: "passwordUserUnique")
}

model Blocks {
  id             Int       @default(autoincrement()) @id
  userId         String
  reason         String
  blocked        DateTime  @default(now())
  expire         DateTime
  active         Boolean
  
}
